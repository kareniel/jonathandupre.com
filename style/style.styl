html, body
  font-size: 20px
  min-height: 100vh

body
  overflow-y: scroll

body ::selection
  background-color: rgba(56, 109, 255, 0.4);
  color: rgb(4, 22, 71);

h1
  margin-top: 2.4rem;
  margin-bottom: 0;

h2
  margin-top: 2.4rem;
  margin-bottom: 0;

h2 ~ p
  margin-top: 0;

.container
  width: 100%
  max-width: 65ex

.t1
  font-size: 2vh

article
  max-width: 72ex

pre
  code
    font-size: 0.8rem
    background-color: #131313
    color: #ffffff
    border-radius: 3px
    display: inline-block
    padding-top: 0.75rem
    padding-bottom: 0.75rem
    padding-left: 1.5rem
    padding-right: 1.5rem
    width: 100%

a, a:visited, a:active
  color: rgb(56, 109, 255);
  font-weight: bold;

blockquote
  margin: 0;
  padding-left: 3rem;
  padding-top: 1rem;
  position: relative;
  font-style: italic;

blockquote::before
  content: "\201C";
  font-size: 5rem;
  font-family: serif;
  margin-top: 0;
  font-weight: bold;
  color: #999;
  position: absolute;
  left: 0px;
  top: 0px;

blockquote::after
  content: "";

